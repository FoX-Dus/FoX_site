extends template/main

block variables
	- var title = 'FoX';

block content
	section.wrapper.main_scr
		.bg
		.front
			.title_name FoX
			.sub_title design & coding
			.social
				a(href="https://github.com/FoX-Dus")
					.fab.fa-codepen
				a(href="https://vk.com/id287523048")
					.fab.fa-vk
				a.show_popup(href="#")
					.fa.fa-envelope
	section.popup
		.popup_bg
		.popup_form
			.close_icon
				.fas.fa-times-circle
			.cont
				form(action="/mail.php" metod="post")
					input(type="text" required="true" name="email" placeholder="Email")
					input(type="text" required="true" name="subject" placeholder="Subject")
					textarea(type="text" required="true" name="offer" placeholder="Your awsome job!" rows="5")
					button.form_btn(type="submit") Send
block scripts
	script(src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous")
	script(defer src="https://use.fontawesome.com/releases/v5.6.1/js/all.js" integrity="sha384-R5JkiUweZpJjELPWqttAYmYM1P3SNEJRM6ecTQF05pFFtxmCO+Y1CiUhvuDzgSVZ" crossorigin="anonymous")
	script(src="static/js/libs.min.js")
	script(src="static/js/main.js")